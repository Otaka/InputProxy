{
    "version": "0.2.0",
    "configurations": [{
        "name": "Debug on Raspberry Pi 4",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/app",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "gdb-multiarch",
        "miDebuggerServerAddress": "${config:raspberrypi.host}:1234",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set architecture to ARM64",
                "text": "set architecture aarch64",
                "ignoreFailures": false
            }
        ],
        "preLaunchTask": "deploy-and-run-gdbserver",
        "logging": {
            "engineLogging": false
        }
    }]
}
